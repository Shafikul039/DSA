#include <bits/stdc++.h>
using namespace std;

const int N = 1e5 + 5;
vector<int> g[N];
int depth[N];

void dfs(int ver, int par) {
    for (int child : g[ver]) {
        if (child == par) continue;
        depth[child] = depth[ver] + 1;
        dfs(child, ver);
    }
}

int main() {
    int n;
    cin >> n;

    for (int i = 0; i < n - 1; i++) {
        int u, v;
        cin >> u >> v;
        g[u].push_back(v);
        g[v].push_back(u);
    }

    dfs(1, 0);

    int max_depth = -1, farthest_node;
    for (int i = 1; i <= n; i++) {
        if (depth[i] > max_depth) {
            max_depth = depth[i];
            farthest_node = i;
        }
        depth[i] = 0;
    }

    dfs(farthest_node, 0);

    int diameter = *max_element(depth + 1, depth + n + 1);
    cout << diameter << "\n";
}
